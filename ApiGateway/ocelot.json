{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/tasks",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "taskmanagement.api",   // Nazwa usługi w docker-compose
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/tasks",
      "UpstreamHttpMethod": ["POST","GET"],
      "SwaggerKey": "taskmanagement"  // Opcjonalnie do Swagger Aggregation
    },
    {
      "DownstreamPathTemplate": "/api/tasks/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "taskmanagement.api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/tasks/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "SwaggerKey": "taskmanagement"
    }
    // Tutaj możesz dodać routing dla Identity.API i innych serwisów
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000" // Adres, pod którym Ocelot będzie dostępny
  }
}